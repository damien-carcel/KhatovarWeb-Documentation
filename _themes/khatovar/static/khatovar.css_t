body {
    padding-top: 50px;
}

a {
    color: #9665b1;
}

a:hover {
    color: #8d45b6;
}

h1 {
    font-size: 24px;
}

h2 {
    font-size: 20px;
}

h3 {
    font-size: 18px;
}

a.headerlink {
    visibility: hidden;
    margin-left: 8px;
    padding: 2px 5px;
    border: 1px solid transparent;
    border-radius: 3px;
}

a.headerlink:hover {
    background-color: #9665b1;
    color: #fff;
}

h1:hover>a.headerlink,
h2:hover>a.headerlink,
h3:hover>a.headerlink,
h4:hover>a.headerlink,
h5:hover>a.headerlink,
h6:hover>a.headerlink,
dt:hover>a.headerlink {
    visibility: visible;
    text-decoration: none;
}

.align-center {
    text-align: center;
}

.alpha {
    margin-left: 0;
}

.omega {
    margin-right: 0;
}

.navbar-fixed-top input {
    margin-top: 5px;
}

.navbar-fixed-top form {
    margin-bottom: 0;
}

.affix,
.navbar-fixed-top {
    -webkit-transform: scale3d(1,1,1);
}

.logo {
    margin: 0;
}

.logo img {
    max-height: 40px;
}

.logo img:hover {
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
    filter: alpha(opacity=80);
    opacity: 0.8;
}

.navbar .brand {
    margin-left: 0;
    padding-left: 10px;
}

.footer {
    background: #eee;
}
.footer p {
    margin: 20px 0;
    padding: 0 20px;
}

.sidebar {
    top: 50px;
    bottom: 65px;
    overflow-y: auto;
}

.sidebar h3 a {
    color: #bbb;
    text-decoration: none;
    transition: color 0.5s ease;
}

.sidebar h3 a:hover {
    color: #777;
}

.section {
    margin: 40px 0;
}

.section>h1 {
    padding: 5px 15px;
    background: #eee;
    border: 1px solid #ccc;
    border-radius: 3px;
}

.section>h2 {
    padding: 0 15px;
    background: #f3f3f3;
    border: 1px solid #e0e0e0;
    border-radius: 3px;
    margin: 20px 0;
}

tt {
    background-color: #d6e8f5;
    padding: 0 1px;
}

.admonition.note tt {
    background-color: #80c7fa;
}

@media (max-width: 979px) {
  body {
    padding-top: 0;
  }
  .sidebar {
    position: static;
  }
}

.admonition {
    margin: 10px 0;
    padding: 5px 10px;
    border: 1px solid #fff;
    border-radius: 3px;
}

.admonition-title {
    font-weight: bold;
}

.admonition.hint,
.admonition.tip {
    background: #c9f8be;
    border-color: #79e05f;
}

.admonition.note {
    background: #d2e8f5;
    border-color: #6cbeee;
}

.admonition.warning,
.admonition.important {
    background: #f6d199;
    border-color: #eeaf5f;
}

.admonition.caution,
.admonition.attention,
.admonition.danger,
.admonition.error {
    background: #fdc0c0;
    border-color: #f18a8a;
}

.highlight {
    border-radius: 3px;
}

pre {
    background-color: #272822;
    color: inherit;
    white-space: pre;
}

.linenodiv {
    opacity: 0.85;
    color: #888;
    margin-right: -6px;
}

td.linenos {
   width: 35px;
   min-width: 35px;
}

.highlighttable {
    width: 100%;
}

div[class^="highlight-"] {
    max-width: 100%;
    margin-bottom: 40px;
    overflow: auto;
}


/* List styles */

ul {
    list-style: none;
}

.sidebar>ul {
    margin-left: 0;
}

ul ul li:before {
    content: '\f0da';
    font-family: FontAwesome;
    color: #aaa;
    display: inline-block;
    margin-left: -10px;
    width: 10px;
    transition: color 0.5s ease-out;
}

ul ul li:hover:before {
    color: #444;
}

.section>ul.simple li:before,
dl:before {
    content: '\f054';
    font-family: FontAwesome;
    font-size: 12px;
    color: #aaa;
    float: left;
    margin-left: -10px;
    margin-right: 5px;
    width: 10px;
    transition: color 0.5s ease-out;
}

.section>ul.simple li:hover:before,
dl:hover:before {
    color: #444;
}

/* Search pageÂ */
.span9>form input[type="submit"] {
    padding: 4px 12px;
    border: 1px solid #bdbdbd;
    border-radius: 4px;
    background-color: #d6d6d6;
    background-image: -webkit-linear-gradient(to bottom, #ffffff, #e6e6e6);
    background-image: -moz-linear-gradient(to bottom, #ffffff, #e6e6e6);
    background-image: -o-linear-gradient(to bottom, #ffffff, #e6e6e6);
    background-image: -ms-linear-gradient(to bottom, #ffffff, #e6e6e6);
    background-image: linear-gradient(to bottom, #ffffff, #e6e6e6);
    text-transform: capitalize;
}

.span9>form input[type="text"] {
    margin: 0;
}

#search-results .context {
    display: none;
}
